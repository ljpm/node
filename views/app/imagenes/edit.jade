extends ../../layout.jade
block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		h1 Editar la imagen: 
			b #{imagen.title}
		form(action="/app/imagenes/#{imagen.id}?_method=PUT" method="POST")
				div(class="form-group")
					label(for="title") Titulo
					input(type="text" name="title" id="title" class="form-control" value="#{imagen.title}")
				div(class="row big-top")
					div(class="col-xs-12 col-sm-6")
						input(type="submit" class="btn btn-info " value="Actualizar imagen")